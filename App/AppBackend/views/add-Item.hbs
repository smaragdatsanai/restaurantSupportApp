<div id="home">
    <div class="d-flex justify-content-center">
        <div class="container-sm m-5 p-5 align-items-center justify-content-center rounded-3"
            style=" background-color: #c7e3c2; max-width:600px;  box-shadow: 4px 3px 7px 2px #00000040;">
            <div class="landing-text pb-sm-3 mb-sm-4 ">
                <h2>Add your Menu Item below...</h2>
            </div>

            <div class="container d-flex align-items-center justify-content-center signup-form">
                <form action="/doAddItem/{{menuId}}" method="post" class="needs-validation">
                    <div class="col-lg form-floating mb-3">
                
                        <input type="text" class="form-control" 
                        value="{{name}}" name="name" id="restaurantNameInput" placeholder="Item Name" 
                        required="required" autofocus>
                        <label for="restaurantNameInput">Item Name</label>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="col-sm form-floating mb-3">
                        <input type="price" class="form-control" 
                        value="{{price}}" name="price" id="floatingprice" placeholder="Price"
                        required="required">
                        <label for="floatingprice">Item Price</label>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="description-container">
                        <label for="description" class="description-label">Item description:</label>
                        <textarea value="{{description}}" id="description" name="description" rows="4" cols="50"></textarea>
                    </div>
                    
                    
                    <button type="submit" class="btn btn-dark btn-lg pb-sm-3 m-3">Add Menu Item</button>
                    
                    
                </form>
            </div>
        </div>
    </div>
</div>