<div id="home">
    <div class="container cont_style p-5">
        <h1 class="mt-5">Profile Page</h1>
        <div class="row mt-5">
            <div class="col-md-6 align-content-center d-flex justify-content-center">
                <img src="https://img.freepik.com/premium-vector/anonymous-user-circle-icon-vector-illustration-flat-style-with-long-shadow_520826-1931.jpg"
                    alt="Profile Picture" class="img-fluid profile-picture">
            </div>
            <div class="col-md-6 ">
                <h2>{{username}}</h2>
                <a href="#" class="btn btn-outline-secondary mb-5">Edit profile</a>
            </div>
        </div>
        {{#if (isuser userType )}}   
        <div class="row mt-5">
            <div class=" vstack gap-3 col-md-7 mx-auto">
                <div class="row">
                    <div class="col-md-5 mx-auto text-center pb-1 ">
                        <p>My reviews</p>
                    </div>
                </div>
                
                    {{#each reviews}}
                    <div class="row justify-content-center">
                        <div class="col">
                            <div class="card mb-3" style="max-width: 540px;">
                                <div class="row g-0">
                                    <div class="col-md-4">
                                        <img src="https://img.freepik.com/premium-vector/anonymous-user-circle-icon-vector-illustration-flat-style-with-long-shadow_520826-1931.jpg"
                                            class="img-fluid rounded-circle  " alt="...">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h5 class="card-title">{{this.Menu_Item.Menu.Restaurant.Name}}</h5>
                                            <p class="card-text">Menu:{{this.Menu_Item.Menu.Name}}<br>Menu
                                                Item:{{this.Menu_Item.Name}}</p>
                                            <p class="card-text">
                                                {{#fillstars this.Rating}}
                                                <i class="fa fa-star"></i>
                                                {{/fillstars}}
                                                {{#emptystars this.Rating}}
                                                <i class="fa fa-star-o" aria-hidden="true"></i>
                                                {{/emptystars}}
                                            </p>
                                            <p class="card-text">{{this.Comments}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
            </div>
        </div>
        {{else}}
        <div class="row mt-5">
            <div class=" vstack gap-3 col-md-7 mx-auto">
                <div class="row">
                    <div class="col-md-5 mx-auto text-center pb-1 ">
                        <a href="/addRestaurant" class="btn btn-outline-secondary mb-5">Add Restaurant</a>
                        <p>My Restaurants</p>
                    </div>
                </div>
                
                    {{#each restaurant}}
                    <div class="row justify-content-center">
                        <div class="col">
                            <div class="card mb-3" style="max-width: 540px;">
                                 <a href="/restaurants/menu/menuItems/{{this.Restaurant_Id}}" class="btn btn-outline-secondary mb-5">Edit Restaurant</a>
                                 <a href="/restaurants/menu/menuItems/deleteRestaurant/{{this.Restaurant_Id}}" class="btn btn-outline-secondary mb-5">Delete Restaurant</a>
                                <div class="row g-0">
                                    <div class="col-md-4">
                                        {{!-- <img src="https://img.freepik.com/premium-vector/anonymous-user-circle-icon-vector-illustration-flat-style-with-long-shadow_520826-1931.jpg"
                                            class="img-fluid rounded-circle  " alt="..."> --}}
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h5 class="card-title">Restaurant: {{this.Name}}</h5>
                                            <a href="/addMenu/{{this.Restaurant_Id}}" class="btn btn-outline-secondary mb-5">Add Menu</a>
                                            {{#each this.Menus}}
                                                <p class="card-text">Menu:{{this.this.Name}}
                                                <a href="/addItem/{{this.this.Menu_Id}}" class="btn btn-outline-secondary mb-5">Add Menu Item</a>
                                                <a href="/restaurants/menu/menuItems/{{this.this.Menu_Id}}" class="btn btn-outline-secondary mb-5">Display All Menu Items</a>
                                                <a href="/restaurants/menu/menuItems/deleteMenu/{{this.this.Menu_Id}}" class="btn btn-outline-secondary mb-5">Delete Menu</a>
                                            {{/each}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                {{/if}}
            </div>
        </div>
    </div>
</div>