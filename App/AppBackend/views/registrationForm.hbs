<form action="/doRegister" method="post">
    <div class="row mt-5">
        <div class="col-8 offset-2">
            <h2 class="text-center">Εγγραφή</h2>
        </div>
    <div class="row mt-1">
        <div class="col-6 offset-3">
            <div class="form-floating">
                <label class="form-label" for="username">Username</label>
                <input type="text" class="form-control "
                    value="{{username}}" name="username" id="username" placeholder="Όνομα χρήστη"
                    required="required" autofocus>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <div class="form-floating">
                <label class="form-label" for="password">Password</label>
                <input type="password" class="form-control " value="{{password}}"
                    name="password" id="password" placeholder="password" required="required">                
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <div class="form-floating">
                <label class="form-label" for="password-confirm">Confirm Password</label>
                <input type="password" class="form-control " value="{{confirmationPassworm}}"
                    name="password-confirm" id="password-confirm" placeholder="Επιβεβαίωση συνθηματικού"
                    required="required">                
            </div>
        </div>
    </div>
    <div class="row mt-1">
        <div class="col-6 offset-3">
            <div class="form-floating">
                <label class="form-label" for="email">Email</label>
                <input type="email" class="form-control "
                    value="{{email}}" name="email" id="email" placeholder="Email"
                    required="required" autofocus>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-6 offset-3">
            <button type="submit" class="btn btn-primary login-btn btn-block w-100">Register</button>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-6 offset-3 text-center">
            <a href="/loginForm">Already a member? Login</a>
        </div>
    </div>
</form>