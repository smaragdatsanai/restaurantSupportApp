
<div class="row mt-5">
    <div class="col-12">
        <h3>Reviews: {{reviews.length}}</h3>
        
    </div>
</div>

{{#if reviews}}
    <div class="table-responsive-sm">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Rating</th>
                    <th>Comments</th>
                  
                    
                   
                </tr>
            </thead>
            <tbody>
                {{#each reviews}} 
                    <tr>
                        <td>{{this.UserUserId}}</td>
                        <td>{{this.Rating}}</td>
                        <td>{{this.Comments}}</td>
                        
                    </tr>
                {{/each}}
            </tbody>
        </table>
    
    </div>
{{/if}}
{{#unless reviews}}
    <div class="row mt-5">
        <div class="col">No Reviews Found!</div>
    </div>
    
{{/unless}}
{{#if error}} 
    <div class="row mt-5">
        <div class="col-6 offset-3">
            <div class="alert alert-primary" role="alert">
                {{error}}
            </div>
        </div>
    </div>
{{/if}}