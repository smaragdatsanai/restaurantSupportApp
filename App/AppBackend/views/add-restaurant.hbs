<div id="home">
    <div class="d-flex justify-content-center">
        <div class="container-sm m-5 p-5 align-items-center justify-content-center rounded-3"
            style=" background-color: #c7e3c2; max-width:600px;  box-shadow: 4px 3px 7px 2px #00000040;">
            <div class="landing-text pb-sm-3 mb-sm-4 ">
                <h2>Give your Restaurant info below...</h2>
            </div>

            <div class="container d-flex align-items-center justify-content-center signup-form">
                <form action="/place-restaurant" method="post" class="needs-validation">
                    <div class="col-lg form-floating mb-3">
                
                        <input type="text" class="form-control" 
                        value="{{name}}" name="name" id="restaurantNameInput" placeholder="Restaurant Name" 
                        required="required" autofocus>
                        <label for="restaurantNameInput">Restaurant Name</label>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="col-sm form-floating mb-3">
                        <input type="address" class="form-control" 
                        value="{{address}}" name="address" id="floatingaddress" placeholder="Address"
                        required="required">
                        <label for="floatingaddress">Address</label>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="col-sm form-floating mb-3">
                        <input type="opens" class="form-control" 
                        value="{{opens}}" name="opens" id="floatingopens" placeholder="HH:MM"
                        required="required">
                        <label for="floatingopens">Openning Hour</label>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="col-sm form-floating mb-3">
                        <input type="closes" class="form-control" 
                        value="{{closes}}" name="closes" id="floatingcloses" placeholder="HH:MM"
                        required="required">
                        <label for="floatingcloses">Closing Hour</label>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="col-sm form-floating mb-3">
                        <input type="type" class="form-control" 
                        value="{{type}}" name="type" id="floatingtype" placeholder="Type"
                        required="required">
                        <label for="floatingtype">Restaurant type</label>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <button type="submit" class="btn btn-dark btn-lg pb-sm-3 mb-3">Add Restaurant</button>
                    {{!-- <div class="col-sm  mb-sm-2">
                        <a href="/adminRegister" style="color: black;  ">Click here if you dont have an
                            account</a>
                    </div> --}}
                    
                </form>
            </div>
        </div>
    </div>
</div>