<form action="" method="post">
    <div class="row mt-5">
        <div class="col-8 offset-2">
            <h2 class="text-center">Add your New Menu Item below...</h2>
        </div>
    </div>
    <div class="row mt-1">
        <div class="col-6 offset-3">
            <div class="form-floating">
              
                <input type="text" class="form-control"
                    value="{{name}}" name="name" id="name" placeholder="Item Name"
                    required="required" autofocus 
                >
                <label class="form-label" for="name">New Item Name</label>

            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <div class="form-floating">
                
                <input type="description" class="form-control"
                    value="{{description}}" name="description" id="description" placeholder="Description"
                >
                <label class="form-label" for="description">Item description</label>               
            </div>
        </div>
    </div>
    
    <div class="row mt-5">
        <div class="col-6 offset-3">
            <div class="form-floating">
                
                <input type="price" class="form-control" 
                    value="{{price}}" name="price" id="price" placeholder="Price"
                >
                <label class="form-label" for="price">Price</label>
            </div>
        </div>
    

    </div>

    
    <div class="row mt-9">
        <div class="col-6 offset-3">
            <button type="submit" class="btn btn-dark btn-lg pb-sm-3 mb-3">Submit</button>   
        </div>
    </div>
</form>